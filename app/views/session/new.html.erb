<div class="signupdiv">
<%= form_tag '/login' do %>
  <div>
    <%= label_tag :email, nil, :class => 'emailsignin' %>
    <%= text_field_tag :email, nil, :autofocus => true, :required => true %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :required => true %>
    <%= submit_tag 'Login', :class => 'signinbutton' %>
  </div>
</div>
<% end %>
